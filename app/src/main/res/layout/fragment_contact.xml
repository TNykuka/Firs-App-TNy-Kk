<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context="com.example.android.navigation.RulesFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/contactprofile">

        <ImageView
            android:id="@+id/facebook"
            android:layout_width="45dp"
            android:layout_height="54dp"
            android:layout_marginStart="72dp"
            android:layout_marginTop="80dp"
            android:contentDescription="@string/facebook"
            android:src="@drawable/facebook"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/contact" />

        <ImageView
            android:id="@+id/line"
            android:layout_width="45dp"
            android:layout_height="54dp"
            android:layout_marginTop="36dp"
            android:contentDescription="@string/line"
            android:src="@drawable/line"
            app:layout_constraintStart_toStartOf="@+id/facebook"
            app:layout_constraintTop_toBottomOf="@+id/facebook" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="45dp"
            android:layout_height="54dp"
            android:layout_marginStart="72dp"
            android:layout_marginTop="36dp"
            android:contentDescription="@string/ig"
            android:src="@drawable/ig"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/line" />

        <TextView
            android:id="@+id/name_facebook"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="36dp"
            android:layout_marginTop="100dp"
            android:text="@string/name_facebook"
            android:textColor="@android:color/black"
            android:textSize="@dimen/name_contact"
            app:layout_constraintStart_toEndOf="@+id/facebook"
            app:layout_constraintTop_toBottomOf="@+id/contact" />

        <TextView
            android:id="@+id/name_line"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="56dp"
            android:text="@string/name_line"
            android:textColor="@android:color/black"
            android:textSize="@dimen/name_contact"
            app:layout_constraintStart_toStartOf="@+id/name_ig"
            app:layout_constraintTop_toBottomOf="@+id/name_ig" />

        <TextView
            android:id="@+id/name_ig"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="56dp"
            android:text="@string/name_ig"
            android:textColor="@android:color/black"
            android:textSize="@dimen/name_contact"
            app:layout_constraintStart_toStartOf="@+id/name_facebook"
            app:layout_constraintTop_toBottomOf="@+id/name_facebook" />

        <TextView
            android:id="@+id/contact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/almendra_bold_italic"
            android:text="@string/contact"
            android:textColor="@android:color/black"
            android:textSize="@dimen/contact"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.064" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
